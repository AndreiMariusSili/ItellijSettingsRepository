      <option name="COMMAND" value="$USER_HOME$/opt/miniconda3/bin/flake8" />
      <option name="PARAMETERS" value="$FilePath$" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
  </tool>
</toolSet>